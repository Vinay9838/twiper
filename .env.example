# X (Twitter) API credentials
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_SECRET=

# Logging level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# Local posting (from data/) — number of tweets to post per run
X_POST_LIMIT=1
# Alternative legacy var (fallback)
# POST_LIMIT=1

# MEGA flow toggle — true/1/yes to enable MEGA download-and-post
X_USE_MEGA=true

# MEGA account login (required unless using MEGA_PUBLIC_URL)
MEGA_EMAIL=
MEGA_PASSWORD=

# Folder inside MEGA to scan (defaults to XYZBlob)
MEGA_DIR_NAME=XYZBlob

# Optional: public URL to a MEGA file (bypasses folder scan + DB uniqueness)
# MEGA_PUBLIC_URL=

# Deletion behavior after successful post
# false -> move to trash; true -> permanent delete
MEGA_HARD_DELETE=false

# Pretty progress bar for MEGA downloads
MEGA_PROGRESS_BAR=1

# SQLite database path for de-duplication tracking
DB_PATH=data/twiper.db

# Fly.io scheduling guard (used when scheduling hourly)
# Run only every N hours, starting at RUN_OFFSET_HOURS
# Example: RUN_EVERY_HOURS=4 and RUN_OFFSET_HOURS=0 runs at 00,04,08,12,16,20 UTC
RUN_EVERY_HOURS=4
RUN_OFFSET_HOURS=0